# ===============================
# BACKEND API - Variables d'environnement
# ===============================
# Copier ce fichier en .env.dev et .env.prod
# et ajuster les valeurs selon l'environnement

# ================================
# Spring Profile
# ================================
SPRING_PROFILES_ACTIVE=dev

# ================================
# Database PostgreSQL
# ================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=taskforce-db
DB_USER=postgres
DB_PASSWORD=PostgreSQLP54!

# ================================
# Keycloak
# ================================
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=taskforce-dev
KEYCLOAK_CLIENT_ID=taskforce-api
KEYCLOAK_CLIENT_SECRET=dev-secret-change-in-production

# Keycloak Admin
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ================================
# Stripe Configuration
# ================================
# Clé API Stripe (Test Key commence par sk_test_)
STRIPE_API_KEY=sk_test_your_stripe_key_here

# Webhook Secret (pour vérifier les webhooks Stripe)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Price IDs des plans (à récupérer depuis Stripe Dashboard)
STRIPE_FREE_PRICE_ID=
STRIPE_PREMIUM_PRICE_ID=price_premium
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise

# ================================
# Mailtrap (SMTP pour développement)
# ================================
# Credentials depuis https://mailtrap.io/inboxes
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM=noreply@taskforce.com
MAIL_FROM_NAME=Taskforce

# ================================
# OTP Configuration
# ================================
# Durée de validité du code OTP en minutes
OTP_EXPIRATION_MINUTES=10

# Longueur du code OTP (6 chiffres par défaut)
OTP_LENGTH=6

# ================================
# CORS
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ================================
# Server
# ================================
SERVER_PORT=8080

# ================================
# JVM Options (pour Docker)
# ================================
JAVA_OPTS=-Xms256m -Xmx512m
