# ===============================
# ENVIRONNEMENT PRODUCTION
# Fichier d'exemple pour la production
# Copier ce fichier en .env.prod et MODIFIER TOUTES LES VALEURS
# NE JAMAIS COMMITER .env.prod AVEC LES VRAIES VALEURS !
# ===============================

# Spring Profile
SPRING_PROFILE=prod

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_HOST=your-prod-db-host.com
DB_PORT=5432
DB_NAME=taskforce_prod
DB_USER=taskforce_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Keycloak Configuration
KEYCLOAK_URL=https://auth.yourdomain.com
KEYCLOAK_REALM=taskforce
KEYCLOAK_CLIENT_ID=taskforce-api
KEYCLOAK_CLIENT_SECRET=CHANGE_ME_STRONG_SECRET_HERE
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com

# Logging (optionnel - déjà configuré dans application-prod.yml)
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_TASKFORCE=INFO

