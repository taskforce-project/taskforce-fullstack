---
import "@/styles/global.css";
import "@/styles/accessibility.css";
import TermsPageNew from "@/components/TermsPageNew";

const title = "Terms of Service - TaskForce";
const description = "TaskForce Terms of Service - Rules and guidelines for using our platform";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <TermsPageNew client:only="react" />
  </body>
</html>
