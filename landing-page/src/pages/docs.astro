import "@/styles/accessibility.css";
import DocsPageNew from "@/components/DocsPageNew";

const title = "Documentation - TaskForce";
const description = "Complete documentation for TaskForce task management platform";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
